@model IEnumerable<Ticket>
@{
    ViewBag.Title = "Index";
}

<h2>
    <a style="float:right; color:green" href="@Url.Action("Nuevo","Ticket")"><i class="fas fa-plus-circle"></i></a>
    Listado de Tickets
</h2>
<hr />

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th># Ticket</th>
            <th>Fecha</th>
            <th>Estado</th>
            <th>Usuario</th>
            <th>Responsable</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ticket in Model)
        {
            <tr>
                <td>@ticket.Id</td>
                <td>@ticket.FechaGeneracion</td>
                <td>@ticket.Estado.Nombre</td>
                <td>@ticket.Usuario.Nombres</td>
                <td>@ticket.Responsable.Nombres</td>
                <td style="width:50px">
                    <a href="@Url.Action("Detalle","Ticket",new { id = ticket.Id })" title="Ver detalle" style="color:blue"><i class="fas fa-search" aria-hidden="true"></i></a>
                    <a href="@Url.Action("Actualizar","Ticket",new { id = ticket.Id })" title="Actualizar" style="color:green"><i class="fas fa-user-edit" aria-hidden="true"></i></a>
                    <a href="javascript:void(0)" onclick="getID(@ticket.Id)" data-toggle="modal" data-target="#exampleModal" title="Eliminar" style="color:red"><i class="fas fa-trash-alt" aria-hidden="true"></i></a>
                </td>
            </tr>
        }

    </tbody>
</table>
<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Confirmación de Eliminar</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                ¿Está seguro de eliminar el ticket?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-primary" onclick="deleteTicket()">Si , estoy seguro</button>
            </div>
        </div>
    </div>
</div>
<input type="hidden" value="" id="idTicket" />
@section Scripts{

    <script>
                function deleteTicket() {
                    let url = "@Url.Action("Eliminar","Ticket")";
                    url = url + '/' + $("#idTicket").val();
                    window.location.href = url;
                }
                function getID(id) {
                    $("#idTicket").val(id);
                }

    </script>
}
